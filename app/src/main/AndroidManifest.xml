<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="com.app.pokebase.pokebase">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_pokeball"
        android:label="@string/app_name"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/MainTheme"
        tools:replace="android:theme">
        <activity
            android:name=".activities.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.StartActivity"
            android:theme="@style/StartTheme">
        </activity>
        <activity
            android:name=".activities.IntroActivity"
            android:theme="@style/StartTheme">
        </activity>
        <activity
            android:name=".activities.LoginActivity"
            android:theme="@style/StartTheme">
        </activity>
        <activity
            android:name=".activities.SignUpActivity"
            android:theme="@style/StartTheme">
        </activity>
        <activity
            android:name=".activities.GenderActivity"
            android:theme="@style/StartTheme">
        </activity>
        <activity
            android:name=".activities.MainActivity"
            android:theme="@style/MainTheme">
        </activity>
        <activity
            android:name=".activities.TeamViewActivity"
            android:theme="@style/MainTheme">
        </activity>
        <activity
            android:name=".activities.PokemonProfileActivity"
            android:theme="@style/MainTheme"/>
        <activity
            android:name=".activities.EvolutionsActivity"
            android:theme="@style/MainTheme"/>
        <activity
            android:name=".activities.PokemonEditorActivity"
            android:theme="@style/PokemonEditorTheme"/>
    </application>

</manifest>