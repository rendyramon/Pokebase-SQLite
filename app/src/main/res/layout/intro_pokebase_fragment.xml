<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="20dp">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/big_img"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/starters"/>

        <ImageView
            android:id="@+id/med_img"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="-90dp"
            android:layout_toEndOf="@id/big_img"
            android:layout_below="@id/big_img"
            android:src="@drawable/charizard"/>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@id/big_img"
            android:layout_toStartOf="@id/med_img"
            android:layout_marginTop="10dp"
            android:src="@drawable/pokedex"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="85dp"
        android:layout_marginBottom="70dp"
        android:text="@string/pokedex_description"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="20sp"/>
</LinearLayout>